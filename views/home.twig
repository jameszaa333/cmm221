                <div class="columns is-marginless">

                    {% for item in thumbnails %}
            <div class="column thumbnail-item is-paddingless" style="background-image: url({{ item.image }});">{{ item.title }}</div>
                    {% endfor %}

            <div class="column thumbnail-item is-paddingless" style="background-image: url(assets/images/home/banner/thumbnail-1.jpg);">Never Ever</div>
            <div class="column thumbnail-item is-paddingless" style="background-image: url(assets/images/home/banner/thumbnail-2.jpg);">If You Do</div>
            <div class="column thumbnail-item is-paddingless" style="background-image: url(assets/images/home/banner/thumbnail-3.jpg);">Hard Carry</div>
            <div class="column thumbnail-item is-paddingless" style="background-image: url(assets/images/home/banner/thumbnail-4.jpg);">Fly</div>

            </div>
        </div>
        </section>
