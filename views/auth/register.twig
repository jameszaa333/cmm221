
{% extends 'layout/base.twig' %}

{% block content %}
<main>
<div class="container">
<div class="columns is-marginless">
<div class="column is-one-third is-offset-one-third">
<h1 class="title">Register</h1>
<form action="/register" method="post"> 
<!--    แสดงว่าเมื่อทำเสดจะกลับไปหน้า register เหมือนเดิม แต่เป็นแบบ post หลังสมัคร-->
<div class="field">
<div class="control">
<input type="text" name="username" class="input" placeholder="Username">
</div>
</div>
<div class="field">
<div class="control">
<input type="password" name="password" class="input" placeholder="Password">
</div>
</div>
<div class="field">
<div class="control">
<input type="text" name="firstname" class="input" placeholder="Firstname">
</div>
</div>
<div class="field">
<div class="control">
<input type="text" name="lastname" class="input" placeholder="Lastname">
</div>
</div>
<div class="field">
<div class="control">
<button class="button is-primary">Register</button>
</div>
</div>
</form>
</div>
</div>
</div>
</main>
{% endblock %}